@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<section id="content">

    <div class="container" style="margin-top:70px">

        <div class="row">

            <div class="col-md-8">
                <div class="padding25">
                    <h4>Giriş Yap</h4>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>

                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                           <div class="row">                    
                        <div class="form-group col-xs-12">
                            <input asp-for="Email" class="form-control input-lg" placeholder="Email">
                        </div>

                        <div class="form-group col-xs-12">
                            <input asp-for="Password" class="form-control input-lg" placeholder="Parola">
                        </div>

                        <div class="form-group col-xs-12 text-left">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-send fa-fw"></i> Giriş Yap</button>
                        </div>
                    </div>
                </form>

            </div>

            <div class="col-md-4">

                <div class="padding25" style="margin-top:40px">
                    <h4>DERMO <b>LIPA</b></h4>
                </div>
                <p>Üyeliğiniz Yok mu? Hemen ücretsiz kaydolarak <b>dermolipa.com.tr</b>'nin avantaj dolu dünyasından yararlanabilirsiniz.</p>
                <div class=" btn btn-primary btn-lg margin15 text-uppercase text-left" style=" margin-top:28px">
                    <a style="color:#fff" href="/Account/Register">Aramıza katıl</a>
                </div>

            </div>

        </div>

    </div>



</section>

