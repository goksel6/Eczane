@model Register
@{
    ViewData["Title"] = "Register";

   
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<section id="content">

    <div class="container">

        <div class="row">

            <div class="col-md-8">
                <div class="padding25">
                    <h4><b>Aramıza Katıl</b></h4>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>

                <form asp-action="Register" method="post">
                    
                    <div class="row">

                        <div class="form-group col-xs-12">
                            <input asp-for="Name" class="form-control input-lg" placeholder="Ad">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Surname" class="form-control input-lg" placeholder="Soyad">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Username" class="form-control input-lg" placeholder="Kullanıcı Adı">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Email" class="form-control input-lg" placeholder="Email">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="Password" class="form-control input-lg" placeholder="Parola">
                        </div>
                        <div class="form-group col-xs-12">
                            <input asp-for="RePassword" class="form-control input-lg" placeholder="Parola Tekrar">
                        </div>



                        <div class="form-group col-xs-12 text-left">
                            <button type="submit" value="Submit" class="btn btn-primary btn-lg"><i class="fa fa-send fa-fw"></i>Kaydet</button>
                        </div>
                    </div>
                </form>

            </div>

            <div class="col-md-4">

                <div class="padding25">
                    <h4>DERMO <b>LIPA</b></h4>
                </div>
                <p>Dermolima ailesi olarak sizi aramızda görmekten mutluluk duyarız. <i class="fa fa-heart"></i></p>
                <img src="~/images/register.png" style="margin-left:60px"/>
             
            </div>

        </div>

    </div>



</section>
