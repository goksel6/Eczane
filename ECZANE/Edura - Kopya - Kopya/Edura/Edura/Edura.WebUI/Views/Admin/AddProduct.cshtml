@model Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>Ürün Ekle</h2>
    <hr />
    <form asp-controller="Admin" asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ProductName">Ürün Adı</label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Fiyatı</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IsApproved">Onay</label>
            <input asp-for="IsApproved" class="form-control" />
        </div>

        <div class="form-group">
            <input type="file" name="file" id="file" class="form-control" />
        </div>
        <div class="form-group">
            <label>Kategori Id</label>
            <input type="text" name="CategoryId" id="CategoryId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Özellik Adı</label>
            <input type="text" name="Attribute" id="Attribute" class="form-control" />
        </div>
        <div class="form-group">
            <label>Özellik Değeri</label>
            <input type="text" name="Value" id="Value" class="form-control" />
        </div>

        <input type="submit" class="btn btn-primary" value="Kaydet" />

    </form>
</div>