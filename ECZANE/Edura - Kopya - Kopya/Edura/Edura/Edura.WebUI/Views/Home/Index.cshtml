@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<link href="~/css/bundle.css" rel="stylesheet" />
<section class="cd-hero">
    <ul class="list-unstyled cd-hero-slider autoplay">
        <li class="selected" style="background-image:url('/edura/images/slides/reklam44.jpg');">

        </li>

        <li style="background-image:url('/edura/images/slides/slayt2.jpg');">
    
        </li>
        <li style="background-image:url('/edura/images/slides/slayt3.jpg');">
     
        </li>
        <li style="background-image:url('/edura/images/slides/slayt2.jpg'); ">
    
        </li>
        <li style="background-image:url('/edura/images/slides/slayt4.jpg'); ">
   
        </li>
        <li style="background-image:url('/edura/images/slides/slayt5.jpg'); ">
 
        </li>
        <li style="background-image:url('/edura/images/slides/slayt6.jpg'); ">
    
        </li>
        <li style="background-image:url('/edura/images/slides/slayt7.jpg'); ">
        
        </li>
    </ul>

    <div class="arrow-nav">
        <div class="prev"><a class="hero-prev" href="#"><i class="fa fa-angle-left"></i></a></div>
        <div class="next"><a class="hero-next" href="#"><i class="fa fa-angle-right"></i></a></div>
    </div>
</section>

<div id="intro" class="container-fluid bg-dark padding15" style="background-color: rgba(68, 218, 204, 0.8)">
    <div class="container">
        <div class="row">
            <div class="col-md-10 text-left">
                <h2><b class="counter">5800</b> ÜYE  İLE TÜRKİYENİN EN ÇOK TERCİH EDİLENİ  </h2>
                <i class="fa fa-happy fa-fw"></i>
            </div>
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="col-md-2 text-center btn btn-primary btn-lg margin15 text-uppercase">
                    <a style="color:#fff" href="/Account/Register">Aramıza katıl</a>
                </div>

            }

        </div>
    </div>
</div>


<section id="content">

    <section id="shop" class="container">

        <div class="row">

            <!-- ARAMA KUTUCUĞU -->
            <div id="sidebar" class="col-md-3">

                <div class="widget">
          
                </div>

                @await Component.InvokeAsync("CategoryMenu")

                @await Component.InvokeAsync("FeaturedProducts")


            </div>
            <!-- sidebar end -->
            <!-- right column start -->
            <div class="col-md-9">

                <div class="row">

                    <div class="col-md-12 wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                        <div class="row product-results">
                            <div class="product-results">
                                <div class="col-xs-8">
                                    <p class="woocommerce-result-count">
                                        Toplam @Model.Count() ürün bulunmaktadır.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @foreach (var product in Model)
                    {
                        @Html.Partial("_ProductItem", product)
                    }


                </div>

            </div>
            <!-- right column end -->

        </div>



    </section>



</section>