@model IEnumerable<Product>

<div class="widget">
    <h4>ÖNE ÇIKANLAR</h4>

    <div class="products-list">

        @foreach (var item in Model)
        {
            <div class="media">
                <a class="media-left" href="#">
                    <img alt="" class="img-responsive product-thumb" src="/images/products/@item.Image">
                </a>
                <div class="media-body">
                    <a  asp-controller="Product" 
                        asp-action="Details" 
                        asp-route-id="@item.ProductId" class="product-title">@item.ProductName</a>
                    <p class="product-price">@item.Price.ToString("c")</p>
                </div>
            </div>
        }


    </div>

</div>